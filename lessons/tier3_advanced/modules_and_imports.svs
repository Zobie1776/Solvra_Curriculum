import <vector>;

fn build_roster(members) {
    let mut roster = vector.make();
    for entry in members {
        roster = vector.append(roster, entry);
    }
    return roster;
}

fn summarize_roster(roster) {
    println("Roster size: ", vector.length(roster));
    for person in roster {
        println("  - ", person);
    }
}

