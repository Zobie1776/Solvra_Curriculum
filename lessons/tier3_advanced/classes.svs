fn make_robot(name) {
    return {
        "name": name,
        "tasks": [],
    };
}

fn robot_add_task(robot, task) {
    let mut tasks = robot.tasks;
    tasks = push(tasks, task);
    robot.tasks = tasks;
    println("Task added: ", task);
    return robot;
}

fn robot_summary(robot) {
    println("Robot: ", robot.name);
    println("Task count: ", len(robot.tasks));
    for job in robot.tasks {
        println("  - ", job);
    }
}

