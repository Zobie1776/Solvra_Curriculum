fn describe_temperature(temp_c) {
    if temp_c <= 0 {
        return "Freezing";
    } else if temp_c < 15 {
        return "Chilly";
    } else if temp_c < 25 {
        return "Comfortable";
    }
    return "Warm";
}

fn show_value(label, value) {
    println(label, " ", value);
}

