// Verify inp() doesn't interfere with async/await patterns
// Test that interactive lessons compile and run in automated environments

//==================================================
// Section 2.0 - Test Execution
//==================================================

async fn async_with_input() {
    println("[TEST] Testing inp() in async context...");
    let value = inp("Enter test value: ");
    println("Received: ", value);
    return len(value);
}

fn main() {
    println("[TEST] Starting async + inp() validation...");

    let task = async async_with_input();
    let result = await task;

    println("[TEST] âœ“ PASS - inp() executed without hanging");
    println("[TEST] Result length: ", result);
}

